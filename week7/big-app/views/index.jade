extends layout

block content
	h1 Biergarten
	
	form#new-beer
		h2 Add a beer
		.form-group
			input#beer-name.form-control(type="text", placeholder="Beer Name...")
		.form-group
			input#beer-abv.form-control(type="number", step="any", placeholder="Beer ABV...")
		.form-group
			input#beer-type.form-control(type="text", placeholder="Beer Type...")
		.form-group
			input#beer-brewer.form-control(type="text", placeholder="Beer Brewer...")
		.form-group
			input.btn.btn-primary(type="submit", value="Add Beer")
	
	h2 The Beers
	ul#beer-list
		for beer in beers
			li.beer(data-id="#{beer._id}")
				strong= beer.name
				| &nbsp;
				a.delete(href="#") delete
